
{{log noDeleteBtn}}
<h3>Cookie You selected:</h3>
<ul>
    <li>Base: {{cookie.base}} - {{pricify (findPrice bases cookie.base) }} PLN</li>
    {{#each cookie.addons}}
    <li>Addon: {{this}} - {{pricify (findPrice @root.addons this) }} PLN 
        {{#unless ../noDeleteBtn}}
        <a href="/configurator/remove/addon/{{this}}">Remove</a> 
        {{/unless}}
        </li>
    {{/each}}
</ul>
<p>
    <strong>Total price: {{ pricify sum}}</strong>
</p>
